<p id="notice"><%= notice %></p>


<h1><%= @post.title %></h1>
<p>
  <b>by <%= @post.author %></b>
</p>

<p>
  <b>Writen on: <%= @post.created_at %></b>
</p>

<p>
  <%= @post.content %>
</p>

<hr size="3" noshade>
<!-- Display Comments  -->
<h4>Comments: </h4>
<%= render "comments/show" %>

<!-- Add comments -->
<h4>Add a comment:</h4>
<%= render "comments/form" %>


<% if user_signed_in? %>
	<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>
