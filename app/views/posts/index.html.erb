<h1>Listing posts</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Content</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.author %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.created_at %></td>
    <td><%= link_to 'Show', post %></td>
    <!-- make this private -->
    <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <% end %>
    <!-- make this private -->
    <% if user_signed_in? %>
        <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<!-- make this private -->
<% if user_signed_in? %>
    <%= link_to 'New Post', new_post_path %>
<% end %>

