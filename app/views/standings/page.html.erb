<div class="container">
	<h1>LEAGUE STANDINGS</h1>

	<table class="table">
	  <tr>
	    <td><b>Name</b></td>
	    <td><b>Wins</b></td>
	    <td><b>Losses</b></td>
	    <td><b>Win Pct.</b></td>
	  </tr>
	<% Team.sorted_by_percentage.each do |team| %>
	  <tr>
	    <td><%= team.name %></td>
	    <td><%= team.wins %></td>
	    <td><%= team.losses %></td>
	    <td><%= team.win_percentage %></td>
	  </tr>
	<% end %>
	</table>

</div>